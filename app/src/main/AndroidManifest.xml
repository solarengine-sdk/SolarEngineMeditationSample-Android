<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Required permissions for AppLovin MAX SDK -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    
    <!-- Required permissions for SolarEngine SDK -->
    <!-- IMEI permission (optional) - If collecting IMEI on Android 6.0+, request at runtime -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    
    <!-- Required permissions for Gromore SDK -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MeditationApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SolarEngineMeditationSample"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        tools:targetApi="31"
        tools:replace="android:appComponentFactory">
        
        <!-- Exclude Taku SDK provider to avoid Android Support library conflicts -->
        <provider
            android:name="com.anythink.dlopt.common.ApkFileProvider"
            android:authorities="${applicationId}.apkfileprovider"
            android:exported="false"
            android:grantUriPermissions="true"
            tools:node="remove" />
        
        <!-- AdMob App ID - Replace with your actual AdMob App ID -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SolarEngineMeditationSample">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Ad platform demo Activity -->
        <activity
            android:name=".activity.MaxAdActivity"
            android:exported="false"
            android:theme="@style/Theme.SolarEngineMeditationSample" />
            
        <activity
            android:name=".activity.AdMobAdActivity"
            android:exported="false"
            android:theme="@style/Theme.SolarEngineMeditationSample" />
            
        <activity
            android:name=".activity.TopOnAdActivity"
            android:exported="false"
            android:theme="@style/Theme.SolarEngineMeditationSample" />
            
        <activity
            android:name=".activity.TakuAdActivity"
            android:exported="false"
            android:theme="@style/Theme.SolarEngineMeditationSample" />
            
        <activity
            android:name=".activity.IronSourceAdActivity"
            android:exported="false"
            android:theme="@style/Theme.SolarEngineMeditationSample" />
            
        <activity
            android:name=".activity.GromoreAdActivity"
            android:exported="false"
            android:theme="@style/Theme.SolarEngineMeditationSample" />
            
    </application>

</manifest>